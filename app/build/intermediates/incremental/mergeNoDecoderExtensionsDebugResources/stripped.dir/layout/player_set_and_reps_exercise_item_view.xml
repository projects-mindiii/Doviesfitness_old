        <LinearLayout
            android:id="@+id/llTargetSetAndRepsCount"
            android:weightSum="3"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_Target"
                style="@style/AllHeadingsetandreps2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_exercise_collection_type"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/netflix_sans_medium"
                android:paddingStart="@dimen/_2sdp"
                android:text="Target - "
                android:textColor="@color/exo_white"
                android:textSize="@dimen/_9sdp" />

            <RelativeLayout
                android:id="@+id/llTargetSets"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_centerVertical="true"
                android:background="@drawable/edit_text_bg_gray_new"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_1sdp"
                android:paddingEnd="@dimen/_1sdp">
                <TextView
                    android:id="@+id/tv_sets_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/arrow_icon_sets"
                    android:fontFamily="@font/netflix_sans_regular"
                    android:gravity="center"
                    android:paddingStart="@dimen/_3sdp"
                    android:paddingEnd="@dimen/_3sdp"
                    android:textColor="#C0B9B9"
                    android:textSize="@dimen/_8sdp"

                    />

                <ImageView
                    android:id="@+id/arrow_icon_sets"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:tint="@color/colorWhite"
                    app:srcCompat="@drawable/down_arrow_ico_fill" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_of"
                style="@style/AllDesciptionSetAndReps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/_6sdp"
                android:layout_toEndOf="@+id/llTargetSets"
                android:text="Of"
                android:layout_marginStart="@dimen/_6sdp"
                android:fontFamily="@font/netflix_sans_regular"
                android:textColor="#676767"
                android:textSize="@dimen/_9sdp"
                />

            <RelativeLayout
                android:layout_toEndOf="@+id/tv_of"
                android:id="@+id/repetetion_layout"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/edit_text_bg_gray_new"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/arrow_icon_reps"
                    android:gravity="center"
                    android:paddingStart="@dimen/_3sdp">

                    <TextView
                        android:id="@+id/repetetion_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/netflix_sans_regular"
                        android:gravity="center"
                        android:textColor="#C0B9B9"
                        android:textSize="@dimen/_8sdp" />

                </RelativeLayout>


                <ImageView
                    android:id="@+id/arrow_icon_reps"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:tint="@color/colorWhite"
                    app:srcCompat="@drawable/down_arrow_ico_fill" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
