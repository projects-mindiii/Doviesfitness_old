            android:textSize="@dimen/_10sdp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height=".7dp"
        android:background="@color/line_seperator" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_46sdp">

        <ImageView

            android:id="@+id/iv_PreviousSetIcon"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:padding="@dimen/_4sdp"
            android:rotation="180"
            android:src="@drawable/scroll_forword"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_sets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:nestedScrollingEnabled="false"
            android:orientation="horizontal"
            tools:listitem="@layout/player_set_number_item_view" />
        <!-- android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_22sdp"-->
        <!--need to add abhove lines in recyclerview-->
        <ImageView

            android:id="@+id/iv_nextSetIcon"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/scroll_forword"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/angularIcon1"
            android:layout_width="@dimen/_17sdp"
            android:layout_height="@dimen/_17sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_85sdp"
            android:layout_marginBottom="-5dp"
            android:src="@drawable/upper_half_circle_arrow" />

        <View
            android:id="@+id/bottom_divider"
            android:layout_width="match_parent"
            android:layout_height=".4dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line_seperator" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.doviesfitness.utils.CustomNestedScrollView
            android:id="@+id/sv_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="false">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_exercise_selected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:visibility="visible"
                tools:listitem="@layout/player_set_and_reps_view_item_design" />
        </com.doviesfitness.utils.CustomNestedScrollView>

        <View
            android:id="@+id/dividerofExercise"
            android:layout_width="match_parent"
            android:layout_height=".7dp"
            android:layout_below="@+id/sv_main"
            android:background="@color/line_seperator" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_46sdp"
            android:layout_below="@+id/dividerofExercise">

            <ImageView
                android:id="@+id/angularIcon2"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:layout_marginStart="@dimen/_84sdp"
                android:layout_marginTop="-6dp"
                android:src="@drawable/bottom_half_circle_arrow" />

            <ImageView
                android:id="@+id/option_menu_icon"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:srcCompat="@drawable/option_icon__96_by_96" />

            <RelativeLayout
                android:id="@+id/rl_logset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/edit_text_bg_gray_selected_round"
                android:gravity="center"
                android:visibility="gone"

                >

                <TextView
                    android:id="@+id/tv_logStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:text="Log Set"
                    android:textColor="@color/exo_white"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>


            <ImageView
                android:id="@+id/suffle_complete_item"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_8sdp"
                android:padding="@dimen/_1sdp"
                android:tint="#9A9A9A"
                android:visibility="visible"
                app:srcCompat='@drawable/ic_list_ico' />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llRoundPopup"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_98sdp"
            android:layout_above="@+id/dividerofExercise"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginBottom="-13dp"
            android:background="@drawable/cus_round_all_edgeblack"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/ll_note"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular_0"
                    android:gravity="center_vertical"
                    android:text="Note"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_9sdp" />


                <ImageView
                    android:id="@+id/iv_note"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:gravity="center"
                    android:padding="@dimen/_4sdp"
                    app:srcCompat="@drawable/add_notes_icon" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/dialog_line" />


            <LinearLayout
                android:id="@+id/ll_add_exercise"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular_0"
                    android:gravity="center_vertical"
                    android:text="Add exercise"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_9sdp" />


                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="@dimen/_19sdp"
                    android:layout_height="@dimen/_19sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:gravity="center"
                    app:srcCompat="@drawable/diet_add" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/dialog_line" />

            <LinearLayout
                android:id="@+id/ll_duplicate_round"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular_0"
                    android:gravity="center_vertical"
                    android:text="Duplicate round"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_9sdp" />


                <ImageView
                    android:id="@+id/iv_duplicate"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/ic_copy_icon" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/dialog_line" />

            <LinearLayout
                android:id="@+id/ll_delete"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular_0"
                    android:gravity="center_vertical"
                    android:text="Delete"
                    android:textColor="#FF5050"
                    android:textSize="@dimen/_9sdp" />


                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:tint="@color/colorRed"
                    app:srcCompat="@drawable/ic_delete" />


            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height=".7dp"
        android:background="@color/line_seperator" />


    <!--  <androidx.cardview.widget.CardView
          android:layout_width="@dimen/_100sdp"
          android:layout_height="@dimen/_80sdp"/>-->


</LinearLayout>