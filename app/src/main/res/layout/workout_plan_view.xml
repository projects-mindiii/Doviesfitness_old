<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:background="@color/colorBlack"
    android:id="@+id/diet_container"
    android:layout_height="@dimen/_290sdp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/dietPlan_img"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="@dimen/_16sdp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:src="@drawable/black_wokout_collection_img"
        android:scaleType="fitXY"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:riv_corner_radius="@dimen/_16sdp"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/diet_plan_name"
            android:layout_height="wrap_content"
            android:text="MINDIII Test weight loss diet plans"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:maxLines="2"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:lineSpacingExtra="@dimen/_5sdp"
            android:fontFamily="@font/futura_bold_regular_tracing"
            android:textAllCaps="true"
            android:textSize="@dimen/_22sdp"
            android:letterSpacing="0.04"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:layout_width="@dimen/_200sdp"
            android:id="@+id/txt_week_count"
            android:layout_height="wrap_content"

            android:layout_below="@+id/diet_plan_name"
            android:text="I WEEK PLAN"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:letterSpacing="0.04"
            android:fontFamily="@font/product_sans_regular"
            android:layout_marginBottom="@dimen/_15sdp"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/lock_img"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/lock_ico_bg"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/_50sdp"/>


    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:background="@drawable/black_wokout_collection_img">
    </RelativeLayout>

</RelativeLayout>