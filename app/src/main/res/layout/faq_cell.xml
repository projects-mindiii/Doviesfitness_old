<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <RelativeLayout
            android:id="@+id/rltv_question"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp">

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toStartOf="@+id/iv_collaps"
                android:layout_centerInParent="true"
                android:lineSpacingExtra="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:text="DEMO"
                android:fontFamily="@font/product_sans_bold"
                android:textColor="@color/colorWhite"/>

            <ImageView
                android:id="@+id/iv_collaps"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:padding="@dimen/_8sdp"
                android:tint="@color/colorWhite"
                app:srcCompat="@drawable/ic_down_arrow" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_ans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rltv_question"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_ans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:lineSpacingExtra="@dimen/_5sdp"
                android:fontFamily="@font/product_sans_regular"
                android:letterSpacing="0.04"
                android:text="MIndiii test"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textColor="@color/colorWhite" />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_3sdp"
        android:background="@color/line_seperator" />

</LinearLayout>