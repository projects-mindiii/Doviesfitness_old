<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <FrameLayout
        android:id="@+id/fl_featured"
        android:layout_width="@dimen/_84sdp"
        android:layout_height="@dimen/_123sdp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_4sdp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_featured"
            android:layout_width="@dimen/_84sdp"
            android:layout_height="@dimen/_112sdp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/_4sdp" />

        <TextView
            android:id="@+id/tv_new"
            style="@style/ExtraProductRegularStyle"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_14sdp"
            android:background="@drawable/feed_new_bg"
            android:gravity="center"
            android:text="New"
            android:textColor="@color/colorWhite"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="bottom"
            android:background="@drawable/feed_view_item_gradient">

            <TextView
                android:id="@+id/tv_featured"
                style="@style/ExtraSmallProductBoldStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_17sdp"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/_2sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:text="Dovies"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_8sdp" />
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout><!--
