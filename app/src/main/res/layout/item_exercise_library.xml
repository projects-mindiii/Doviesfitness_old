<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
              android:layout_margin="@dimen/_8sdp"
                android:layout_height="wrap_content">

    <FrameLayout
            android:id="@+id/item_layout"
            android:layout_width="@dimen/_126sdp"
            android:layout_height="wrap_content"
           >

        <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/exercise_img"
                android:layout_width="@dimen/_126sdp"
                android:layout_height="@dimen/_126sdp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="@dimen/_10sdp"
                />


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:layout_gravity="bottom"
                android:background="@drawable/rounded_bottom_black_gradient_bg"
                >


            <TextView
                    style="@style/ExtraSmallProductBoldStyle"
                    android:id="@+id/exercise_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dovies"
                    android:layout_above="@+id/tv_level"
                    android:textSize="@dimen/_11sdp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:layout_alignParentBottom="true"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textColor="@color/colorWhite"
                    />


        </RelativeLayout>


    </FrameLayout>


</RelativeLayout>