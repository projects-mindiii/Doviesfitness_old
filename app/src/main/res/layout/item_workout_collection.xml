<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack">

    <TextView
        android:id="@+id/txt_all_workout_collection2"
        style="@style/mediumProductBoldStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/all_workout_collection"
        android:textColor="@color/title_color"
        android:textSize="@dimen/_11sdp"
        android:visibility="gone" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/exercise_img"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_290sdp"
        android:layout_below="@+id/txt_all_workout_collection2"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginLeft="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:layout_marginRight="@dimen/_6sdp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="@dimen/_5sdp" />
    <!-- android:scaleType="centerCrop" -->
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginLeft="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:layout_marginRight="@dimen/_6sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/black_wokout_collection_img"
        android:visibility="visible"
        app:riv_corner_radius="@dimen/_5sdp" />

    <TextView
        android:id="@+id/exercise_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/level_name"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:lineSpacingExtra="@dimen/_3sdp"
        android:fontFamily="@font/futura_bold_regular_tracing"
        android:gravity="center"
        android:text="Exercise"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_14sdp" />

    <TextView
        android:id="@+id/level_name"
        style="@style/SmallProductRegularStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_6sdp"
        android:layout_marginRight="@dimen/_6sdp"
        android:layout_marginBottom="@dimen/_19sdp"
        android:fontFamily="@font/tamil_sangam"
        android:gravity="center"
        android:text="Exercise"
        android:textColor="@color/subtitle_workkout_collections"
        android:textSize="@dimen/_10sdp" />
</RelativeLayout>

