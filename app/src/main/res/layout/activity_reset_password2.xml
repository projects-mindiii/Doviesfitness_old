<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_layout"
        android:background="@color/colorWhite"
        tools:context=".ui.authentication.login.ResetPassword1Activity">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".ui.authentication.signup.activity.SignUpActivity">


        <ImageView android:layout_width="@dimen/_40sdp"
                   android:layout_height="@dimen/_40sdp"
                   android:layout_gravity="center"
                   android:src="@drawable/logo_login"
                   android:layout_margin="@dimen/_20sdp"/>


        <TextView
                style="@style/largeProductBoldtyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password_reset"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_20sdp"/>

        <TextView
                style="@style/SmallProductRegularStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:text="@string/you_should_receive_a_link_few_moments_please_open_that_link_to_reset_your_password"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorGray10"
                android:lineSpacingExtra="@dimen/_4sdp"
        />

        <TextView
                android:id="@+id/tv_email"
                style="@style/SmallProductRegularStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"/>


        <Button
                android:id="@+id/btn_back_to_login"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:fontFamily="@font/product_sans_bold"
                android:textSize="@dimen/_12sdp"
                android:letterSpacing="0.04"
                android:layout_height="@dimen/_35sdp"
                android:layout_margin="@dimen/_15sdp"
                android:background="@drawable/create_account_btn_bg"
                android:text="@string/back_to_login"
                android:textColor="@color/colorWhite"
                android:layout_marginBottom="@dimen/_25sdp"
        />


        <TextView
                android:id="@+id/tv_return_login"
                style="@style/ExtraProductRegularStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:text=""
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorGray3"
                android:lineSpacingExtra="@dimen/_8sdp"
        />


    </LinearLayout>

    <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            app:srcCompat="@drawable/ic_close"
            android:layout_gravity="end"
            android:layout_alignParentRight="true"
            android:padding="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_alignParentEnd="true"/>
</RelativeLayout>

