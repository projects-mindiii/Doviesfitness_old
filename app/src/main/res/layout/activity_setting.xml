            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineProvider="bounds"
            app:blurOverlayColor="@color/colorBlack">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/toolbar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:padding="@dimen/_2sdp">

                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:tint="@color/colorWhite"
                        app:srcCompat="@drawable/ic_back_arrow_ico" />

                    <TextView
                        android:id="@+id/mW_title_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/_2sdp"
                        android:fontFamily="@font/product_sans_bold"
                        android:letterSpacing="0.04"
                        android:text="Settings"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_12sdp" />

                </RelativeLayout>

                <View
                    android:id="@+id/devider_view"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_below="@+id/toolbar_layout"
                    android:background="@color/line_seperator" />
            </RelativeLayout>


        </eightbitlab.com.blurview.BlurView>

        <FrameLayout
            android:id="@+id/container_id1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tabbar">

        </FrameLayout>



    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_blurlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <eightbitlab.com.blurview.BlurView
            android:id="@+id/transparentBlurView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:outlineProvider="bounds"

            app:blurOverlayColor="#E8000000">
            <RelativeLayout
                android:id="@+id/transparent_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:background="@drawable/black_bg">
            </RelativeLayout>
        </eightbitlab.com.blurview.BlurView>
    </RelativeLayout>
</RelativeLayout>
</layout>