<?xml version="1.0" encoding="utf-8"?>


<layout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <FrameLayout
        android:id="@+id/item_layout"
        android:layout_width="@dimen/_87sdp"
        android:layout_height="@dimen/_122sdp"
        android:layout_centerInParent="true">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_featured"
            android:layout_width="@dimen/_87sdp"
            android:layout_height="@dimen/_120sdp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/_5sdp" />


        <TextView
            android:id="@+id/tv_new"
            style="@style/ExtraProductRegularStyle"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_14sdp"
            android:background="@drawable/feed_new_bg"
            android:gravity="center"
            android:text="New"
            android:textColor="@color/colorWhite"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tv_new_stream"
            android:layout_width="wrap_content"
            android:fontFamily="@font/netflix_sans_bold"
            android:layout_height="wrap_content"
            android:background="@drawable/stream_new_workout_bg"
            android:gravity="center"
            android:textSize="@dimen/_7sdp"
            android:paddingStart="@dimen/_1sdp"
            android:paddingEnd="@dimen/_1sdp"
            android:text="New Workout"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:visibility="gone" />




        <RelativeLayout
            android:id="@+id/rl_grdient"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="bottom"
          >


            <TextView
                android:id="@+id/tv_featured"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_level"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_20sdp"
                android:gravity="center"
                android:maxLines="2"
                android:lineSpacingExtra="@dimen/_minus3sdp"
                android:fontFamily="@font/netflix_sans_medium"
                android:layout_alignParentBottom="true"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_9sdp" />

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_20sdp"
                android:fontFamily="@font/netflix_sans_regular"
                android:gravity="center"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/description_color"
                android:textSize="@dimen/_8sdp"
                android:visibility="gone" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@drawable/circle_orange_bg"
            android:padding="@dimen/_5sdp"
            android:visibility="gone"
            android:tint="@color/colorWhite"
            app:srcCompat="@drawable/ic_recycling_bin" />

        <ImageView
            android:id="@+id/lock_icon"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:background="@drawable/circle_orange_bg"
            android:padding="@dimen/_3sdp"
            android:visibility="gone"
            app:srcCompat="@drawable/lock_ico" />


    </FrameLayout>


</RelativeLayout>
</layout>
