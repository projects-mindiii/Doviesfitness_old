<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/cus_round_all_edgeblack"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/edit_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_editworkout"
                style="@style/mediumProductRegularStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_toLeftOf="@+id/edit_publish_icon"
                android:fontFamily="@font/product_sans_bold"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:text="@string/edit_workout"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:id="@+id/edit_publish_icon"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_15sdp"
                android:padding="@dimen/_5sdp"
                android:tint="@color/colorWhite"
                app:srcCompat="@drawable/ic_edit_workout_white" />

        </RelativeLayout>


        <View
            android:id="@+id/seperator"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/line_seperator" />

        <RelativeLayout
            android:id="@+id/rl_saveworkout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_saveworkout"
                style="@style/mediumProductRegularStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_toLeftOf="@+id/delete_icon"
                android:fontFamily="@font/product_sans_bold"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:text="@string/save_to_my_workout"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:id="@+id/delete_icon"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_15sdp"
                android:padding="@dimen/_5sdp"
                android:tint="@color/colorWhite"
                app:srcCompat="@drawable/ic_active_workout" />
        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/cus_round_all_edgeblack"
        android:fontFamily="@font/product_sans_bold"
        android:gravity="center"
        android:text="Cancel"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_15sdp"

        />


</LinearLayout>