<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_gravity="center"
              android:gravity="center"
              tools:context=".ui.bottom_tabbar.home_tab.dialog.LogoutDialog">


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/cus_round_all_edgeblack_white">

        <TextView
                android:id="@+id/tv_header"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/are_you_sure_you_want_to_logout"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/product_sans_bold"
                android:textColor="@color/colorWhite"
                />

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bottom_seperate_line_color"
                android:alpha=".5"
                />

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_cancel"
                    android:text="@string/cancel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/product_sans_bold"
                    android:layout_gravity="center_vertical"
                    android:textColor="#2C84DD"
                    android:layout_height="wrap_content"
                    />

            <View
                    android:id="@+id/seperator"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/bottom_seperate_line_color"
                    android:alpha=".5"
                    />

            <TextView

                    android:id="@+id/tv_logout"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/product_sans_bold"
                    android:layout_gravity="center_vertical"
                    android:text="@string/logout"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:textColor="@color/colorRed"
                    android:layout_height="wrap_content"


                    />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>