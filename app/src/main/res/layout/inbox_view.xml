<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_70sdp"
    android:layout_centerVertical="true"
    android:elevation="0.5dp"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">

    <RelativeLayout
        android:id="@+id/Mcdelete_post"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_gravity="end"
        android:background="@drawable/delete_bg"
        android:elevation="0.5dp"
        android:gravity="center">

        <TextView
            android:id="@+id/iv_for_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F30E00"
            android:text="Delete"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_10sdp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rltv_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack">

        <RelativeLayout
            android:id="@+id/rl_workOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_image_view"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="@dimen/_4sdp" />


            <TextView
                android:id="@+id/txt_notification_read"
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_8sdp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/notification_dot"
                android:fontFamily="@font/product_sans_regular"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/workOut_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toStartOf="@+id/iv_image_view"
                android:gravity="center|start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:fontFamily="@font/product_sans_bold"
                    android:gravity="start"
                    android:letterSpacing="0.1"
                    android:text=""
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tv_discribtions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/product_sans_regular"
                    android:gravity="start"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="3dp"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="#7a7a7a"
                    android:textSize="@dimen/_10sdp" />


                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/product_sans_bold"
                    android:gravity="start"
                    android:lineSpacingExtra="1dp"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="#a9a8a8"
                    android:textSize="@dimen/_7sdp" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/divider_layout"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/line_seperator" />

    </RelativeLayout>
</com.daimajia.swipe.SwipeLayout>
