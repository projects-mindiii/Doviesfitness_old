<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/black_bg"
    android:orientation="vertical">

    <View
        android:id="@+id/top_divider"
        android:layout_width="match_parent"
        android:layout_height=".7dp"
        android:background="@color/line_seperator" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_46sdp"
        android:background="@drawable/black_bg"
        android:paddingStart="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_reounds"
            style="@style/AllHeadingsetandreps2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/netflix_sans_medium"
            android:text="Round"
            android:paddingEnd="@dimen/_1sdp"
            android:textColor="@color/exo_white"
            android:textSize="@dimen/_9sdp" />

        <TextView
            android:id="@+id/tv_exercise_collection_type"
            style="@style/AllDesciptionSetAndReps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/_50sdp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@+id/tv_reounds"
            android:fontFamily="@font/netflix_sans_regular"
            android:textColor="#6D6D6D"
            android:textSize="@dimen/_9sdp"/>


        <LinearLayout
            android:weightSum="3"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_Target"
                style="@style/AllHeadingsetandreps2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_exercise_collection_type"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/netflix_sans_medium"
                android:paddingStart="@dimen/_2sdp"
                android:text="Target - "
                android:textColor="@color/exo_white"
                android:textSize="@dimen/_9sdp" />

            <RelativeLayout
                android:id="@+id/llTargetSets"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_centerVertical="true"
                android:background="@drawable/edit_text_bg_gray_new"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_1sdp"
                android:paddingEnd="@dimen/_1sdp">
                <TextView
                    android:id="@+id/tv_sets_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/arrow_icon_sets"
                    android:fontFamily="@font/netflix_sans_regular"
                    android:gravity="center"
                    android:paddingStart="@dimen/_3sdp"
                    android:paddingEnd="@dimen/_3sdp"
                    android:textColor="#C0B9B9"
                    android:textSize="@dimen/_8sdp"

                    />

                <ImageView
                    android:id="@+id/arrow_icon_sets"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:tint="@color/colorWhite"
                    app:srcCompat="@drawable/down_arrow_ico_fill" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_of"
                style="@style/AllDesciptionSetAndReps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/_6sdp"
                android:layout_toEndOf="@+id/llTargetSets"
                android:text="Of"
                android:layout_marginStart="@dimen/_6sdp"
                android:fontFamily="@font/netflix_sans_regular"
                android:textColor="#676767"
                android:textSize="@dimen/_9sdp"
                />

            <RelativeLayout
                android:layout_toEndOf="@+id/tv_of"
                android:id="@+id/repetetion_layout"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/edit_text_bg_gray_new"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/arrow_icon_reps"
                    android:gravity="center"
                    android:paddingStart="@dimen/_3sdp">

                    <TextView
                        android:id="@+id/repetetion_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/netflix_sans_regular"
                        android:gravity="center"
                        android:textColor="#C0B9B9"
                        android:textSize="@dimen/_8sdp" />

                </RelativeLayout>


                <ImageView
                    android:id="@+id/arrow_icon_reps"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:tint="@color/colorWhite"
                    app:srcCompat="@drawable/down_arrow_ico_fill" />

            </RelativeLayout>

        </LinearLayout>



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height=".7dp"
        android:background="@color/line_seperator" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_46sdp">

        <ImageView

            android:id="@+id/iv_PreviousSetIcon"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
             android:padding="@dimen/_4sdp"
            android:rotation="180"
             android:src="@drawable/scroll_forword"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_sets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:nestedScrollingEnabled="false"
            android:orientation="horizontal"
            tools:listitem="@layout/set_number_item_view" />
        <!-- android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_22sdp"-->
        <!--need to add abhove lines in recyclerview-->
        <ImageView

            android:id="@+id/iv_nextSetIcon"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
             android:padding="@dimen/_4sdp"
            android:src="@drawable/scroll_forword"
            android:visibility="gone" />

        <ImageView
            android:layout_width="@dimen/_17sdp"
            android:layout_height="@dimen/_17sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_85sdp"
            android:layout_marginBottom="-5dp"
            android:src="@drawable/upper_half_circle_arrow" />

        <View
            android:id="@+id/bottom_divider"
            android:layout_width="match_parent"
            android:layout_height=".4dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line_seperator" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--     <com.doviesfitness.utils.CustomNestedScrollView
                 android:id="@+id/sv_main"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:fillViewport="false">-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_exercise_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/set_and_reps_view_item_design" />
        <!-- </com.doviesfitness.utils.CustomNestedScrollView>-->
        <View
            android:id="@+id/dividerofExercise"
            android:layout_width="match_parent"
            android:layout_below="@+id/rv_exercise_selected"
            android:layout_height=".7dp"
            android:background="@color/line_seperator" />
        <RelativeLayout
            android:layout_below="@+id/dividerofExercise"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_46sdp">

            <ImageView
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:layout_marginStart="@dimen/_84sdp"
                android:layout_marginTop="-6dp"
                android:src="@drawable/bottom_half_circle_arrow" />

            <ImageView
                android:id="@+id/option_menu_icon"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:srcCompat="@drawable/option_icon__96_by_96" />

            <ImageView
                android:id="@+id/suffle_complete_item"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_8sdp"
                android:padding="@dimen/_1sdp"
                android:tint="#9A9A9A"
                android:visibility="visible"
                app:srcCompat='@drawable/ic_list_ico' />

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/llRoundPopup"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_98sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginBottom="-13dp"
            android:background="@drawable/cus_round_all_edgeblack"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:layout_above="@+id/dividerofExercise"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/ll_note"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_regular_0"
                    android:text="Note"
                    android:textSize="@dimen/_9sdp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorWhite"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_12sdp"/>


                <ImageView
                    android:id="@+id/iv_note"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    app:srcCompat="@drawable/add_notes_icon"
                    android:gravity="center"
                    android:padding="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/dialog_line"/>


            <LinearLayout
                android:id="@+id/ll_add_exercise"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_regular_0"
                    android:text="Add exercise"
                    android:textSize="@dimen/_9sdp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorWhite"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_12sdp"/>


                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="@dimen/_19sdp"
                    android:layout_height="@dimen/_19sdp"
                    app:srcCompat="@drawable/diet_add"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_12sdp"
                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/dialog_line"/>

            <LinearLayout
                android:id="@+id/ll_duplicate_round"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_regular_0"
                    android:text="Duplicate round"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/colorWhite"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_12sdp"/>


                <ImageView
                    android:id="@+id/iv_duplicate"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:src="@drawable/ic_copy_icon"
                    android:gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/dialog_line"/>

            <LinearLayout
                android:id="@+id/ll_delete"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_regular_0"
                    android:text="Delete"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="#FF5050"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_12sdp"/>


                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    app:srcCompat="@drawable/ic_delete"
                    android:gravity="center"
                    android:tint="@color/colorRed"
                    android:padding="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    />



            </LinearLayout>




        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height=".7dp"
        android:background="@color/line_seperator" />





    <!--  <androidx.cardview.widget.CardView
          android:layout_width="@dimen/_100sdp"
          android:layout_height="@dimen/_80sdp"/>-->




</LinearLayout>