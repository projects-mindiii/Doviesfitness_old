<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorWhite">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.createAndEditDietPlan.activity.Create_DietDetailActvity">

        <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/colorWhite"
                android:layout_height="match_parent">

            <RelativeLayout
                    android:id="@+id/toolbar_layout"
                    android:layout_width="match_parent"
                    android:padding="@dimen/_2sdp"
                    android:background="@color/colorWhite"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:padding="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        app:srcCompat="@drawable/ic_ico_back_login"
                        android:layout_marginStart="@dimen/_10sdp"/>

                <TextView
                        android:id="@+id/dp_title_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/colorGray"
                        style="@style/ForHeadingText"
                        android:layout_margin="@dimen/_2sdp"
                        android:textAllCaps="true"
                        android:text="OverView"/>


                <ImageView
                        android:id="@+id/iv_share"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:padding="@dimen/_8sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        app:srcCompat="@drawable/ic_share"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_10sdp"/>

            </RelativeLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/devider_view"
                    android:layout_below="@+id/toolbar_layout"
                    android:background="@color/colorGray1"/>


            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never"
                    android:layout_below="@+id/devider_view">


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                    <RelativeLayout
                            android:id="@+id/rltv_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:id="@+id/iv_dp_sub_image"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_360sdp"
                                android:scaleType="centerCrop"/>

                        <ImageView
                                android:id="@+id/lock_img"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignParentEnd="true"
                                android:visibility="gone"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:src="@drawable/lock_ico_bg"
                                android:layout_marginEnd="@dimen/_10sdp"/>


                    </RelativeLayout>

                    <TextView
                            android:id="@+id/dp_title_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/futura_bold_regular_tracing"
                            android:layout_below="@id/rltv_image"
                            android:textAllCaps="true"/>

                    <TextView
                            android:layout_below="@+id/dp_title_heading"
                            android:id="@+id/txt_diet_discription"
                            android:layout_width="match_parent"
                            android:layout_centerInParent="true"
                            android:textSize="@dimen/_10sdp"
                            android:gravity="start"
                            android:lineSpacingExtra="@dimen/_5sdp"
                            android:visibility="gone"
                            android:letterSpacing="0.05"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/product_sans_regular"
                            android:textColor="@color/colorGray10"
                            android:layout_height="wrap_content"/>

                    <Button
                            android:id="@+id/btn_status"
                            android:layout_below="@+id/txt_diet_discription"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_38sdp"
                            android:layout_marginEnd="@dimen/_30sdp"
                            android:layout_marginStart="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:background="@drawable/create_account_btn_bg"
                            android:fontFamily="@font/product_sans_bold"
                            android:text="ADD"
                            android:letterSpacing="0.04"
                            android:backgroundTint="@color/colorBlack3"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"/>

                </RelativeLayout>

            </ScrollView>

        </RelativeLayout>

    </RelativeLayout>

</layout>