<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:background="@color/colorBlack"
        android:layout_height="match_parent"
        tools:context=".ui.authentication.signup.activity.CreateUserActivity">


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



            <TextView
                    android:id="@+id/tv_skip"
                    style="@style/mediumProductRegularStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:padding="@dimen/_5sdp"
                    android:gravity="end"
                    android:layout_alignParentEnd="true"
                    android:text="@string/skip"
                    android:textColor="@color/colorWhite"
                    android:layout_alignParentRight="true"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                    android:fontFamily="@font/futura_bold_regular_tracing"
                    android:textSize="@dimen/_20sdp"
                        android:text="@string/add_profile_photo"
                        android:textColor="@color/colorWhite"/>

                <TextView
                        style="@style/SmallProductRegularStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:letterSpacing="0.1"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="@string/add_a_profile_photo_so_that_your_friend_know_it_s_your"
                        android:textColor="@color/colorGray2"/>

                <RelativeLayout
                        android:id="@+id/cped_rl"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_height="@dimen/_135sdp">


                    <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/profile_img"
                                android:layout_width="@dimen/_120sdp"
                                android:layout_height="@dimen/_120sdp"
                                android:src="@color/colorBlack"
                                app:civ_border_color="@color/colorWhite"
                                app:civ_border_width="3dp"
                                />

                        <ImageView
                                android:id="@+id/iv_placeholder"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_gravity="center"
                            android:tint="@color/exo_white"
                                app:srcCompat="@drawable/ic_ico_cemera_img"
                                />
                    </FrameLayout>


                    <ImageView
                            android:id="@+id/iv_upload"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_alignParentRight="true"
                            app:srcCompat="@drawable/ic_ico_upload_img"
                            android:layout_alignParentEnd="true"
                            />


                </RelativeLayout>

            </LinearLayout>

            <ImageView
                    android:id="@+id/iv_next_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_next_btn_selector"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="30dp"
                    android:scaleType="center"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:textAllCaps="false"
                    android:layout_marginTop="80dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"/>

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:tint="@color/colorWhite"
                app:srcCompat="@drawable/ic_ico_back_login" />


        </RelativeLayout>



</RelativeLayout>