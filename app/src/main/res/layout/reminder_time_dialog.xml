<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@color/col_input_bg">

        <TextView
                android:id="@+id/tv_cancel"
                style="@style/mediumProductRegularStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/_6sdp"
                android:text="@string/cancel"
            android:textAllCaps="false"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/colorpickerRed"
            android:fontFamily="@font/product_sans_regular"
            android:background="@android:color/transparent"/>

        <TextView
                android:id="@+id/weight"
                style="@style/mediumProductRegularStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="@dimen/_6sdp"
                android:text="Select Reminder Time"
                android:textColor="@color/colorWhite"
                android:visibility="visible"
            android:textAllCaps="false"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/product_sans_regular"
            android:background="@android:color/transparent"/>


        <TextView
                android:id="@+id/tv_done"
                style="@style/mediumProductRegularStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="@dimen/_6sdp"
                android:text="@string/done"
            android:textAllCaps="false"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/product_sans_regular"
            android:background="@android:color/transparent" />

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/colorLightBlack" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:background="@color/new_background_dark"
            android:orientation="horizontal">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                android:gravity="center"
                android:background="@color/select_picker_item"

                    android:orientation="vertical">

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/line_seperator" />

                <TextView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_14sdp"
                        android:text=""

                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_124sdp" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/line_seperator" />

            </RelativeLayout>
            <com.doviesfitness.utils.number_picker.NumberPicker
                android:id="@+id/no_picker"
                style="@style/NPWidget.Holo.Light.NumberPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:clickable="false"
                android:layout_marginRight="@dimen/_10sdp"

                android:descendantFocusability="blocksDescendants"
                android:focusable="false" />

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                android:background="@color/select_picker_item"

                    android:orientation="vertical">

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/line_seperator" />

                <TextView
                    android:id="@+id/time_type"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:text=""
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_14sdp" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/line_seperator" />

            </RelativeLayout>
            <com.doviesfitness.utils.number_picker.NumberPicker
                android:id="@+id/no_picker1"
                style="@style/NPWidget.Holo.Light.NumberPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:clickable="false"
                android:descendantFocusability="blocksDescendants"
                android:focusable="false" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>