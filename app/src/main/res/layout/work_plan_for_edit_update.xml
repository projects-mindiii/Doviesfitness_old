<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@android:color/transparent"
>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cus_round_all_edgeblack"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/_5sdp">

        <LinearLayout
                android:id="@+id/ll_for_new_plan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="horizontal"
                android:gravity="center">

            <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="Save as new workout plan"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorWhite"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_12sdp"/>


            <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:srcCompat="@drawable/ic_active_workout"
                    android:gravity="center"
                    android:padding="@dimen/_4sdp"
                    android:tint="@color/colorWhite"
                    android:layout_marginRight="@dimen/_12sdp"
            />


        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorGray4"/>


        <LinearLayout
                android:id="@+id/ll_for_overwrite"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="horizontal"
                android:gravity="center">

            <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="Overwrite current workout plan"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorWhite"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_12sdp"/>


            <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:srcCompat="@drawable/ic_edit_workout_white"
                    android:gravity="center"
                    android:padding="@dimen/_4sdp"
                android:tint="@color/colorWhite"
                android:layout_marginEnd="@dimen/_12sdp"
            />

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorGray4"/>

    </LinearLayout>

    <TextView
            android:id="@+id/tv_cancel"
            style="@style/largeProductBoldtyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/cus_round_all_edgeblack"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="Cancel"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_15sdp"
    />


</LinearLayout>