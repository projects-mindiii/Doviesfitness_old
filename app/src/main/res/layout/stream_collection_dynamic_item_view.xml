<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBlack"
    android:orientation="vertical"

    >

    <LinearLayout
        android:id="@+id/item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/colorBlack"
        android:layout_marginBottom="@dimen/_12sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/workout_collection_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/netflix_sans_bold"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_11sdp"
            android:visibility="visible" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_290sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@color/colorBlack"
            android:visibility="visible">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/exercise_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_290sdp"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="@dimen/_6sdp" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_gredientview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/black_wokout_collection_img"
                android:visibility="gone"
                app:riv_corner_radius="@dimen/_6sdp" />

            <TextView
                android:id="@+id/exercise_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/level_name"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_6sdp"
                android:fontFamily="@font/futura_bold_regular_tracing"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/_5sdp"
                android:textAllCaps="true"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_22sdp" />

            <TextView
                android:id="@+id/level_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_28sdp"
                android:fontFamily="@font/tamil_sangam"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/tv_new_stream"
                style="@style/ExtraProductRegularStyle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/feed_new_bg"
                android:gravity="center"
                android:paddingStart="@dimen/_3sdp"
                android:paddingEnd="@dimen/_3sdp"
                android:text="New Season"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_8sdp"
                android:visibility="gone" />


        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/horizontal_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlack"
        android:orientation="vertical"
        android:visibility="gone">
<!--devendra bich k 2-->
        <RelativeLayout
            android:id="@+id/collection_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/first_collection_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_7sdp"
                android:gravity="center_vertical"
                android:text="Release"
                android:fontFamily="@font/netflix_sans_bold"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_11sdp" />
            <TextView
                android:id="@+id/view_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_7sdp"
                android:text="@string/view_all"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/netflix_sans_bold"
                android:textColor="@color/view_all_text_color"
                android:textSize="@dimen/_10sdp" />


            <ImageView
                android:id="@+id/next_icon2"
                android:layout_width="@dimen/_19sdp"
                android:layout_height="@dimen/_19sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_2sdp"
                android:padding="@dimen/_3sdp"
                android:tint="@color/colorWhite"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_next_arrow" />
        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_workout"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never" />
    </LinearLayout>

</LinearLayout>