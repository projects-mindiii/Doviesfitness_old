<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvCountryLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBlack"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_user_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp">

        <RelativeLayout
            android:id="@+id/rl_user_image"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_5sdp"
            android:padding="@dimen/_5sdp">

            <ImageView
                android:id="@+id/ivCountryImage"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:src="@drawable/app_icon" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:gravity="center"
            android:layout_toRightOf="@+id/rl_user_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCountryName"
                style="@style/SmallProductRegularStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textSize="@dimen/_11sdp"
                android:gravity="start|center_vertical"
                android:letterSpacing="0.04"
                android:maxLines="1"
                android:layout_gravity="center_vertical"
                android:text=""
                android:textColor="@color/colorWhite" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvCountryCode"
            style="@style/SmallProductRegularStyle"
            android:layout_width="wrap_content"
            android:textSize="@dimen/_11sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/colorWhite" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:background="@color/line_seperator" />

</LinearLayout>