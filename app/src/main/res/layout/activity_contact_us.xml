<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/container_Id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBlack">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:paddingTop="@dimen/_55sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:fontFamily="@font/product_sans_bold"
                        android:gravity="center"
                        android:text="@string/we_would_love_to_here_from_you"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_17sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:fontFamily="@font/product_sans_regular"
                        android:gravity="center|left"
                        android:letterSpacing="0.04"
                        android:text="@string/have_a_question_or_enqueries"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_10sdp" />


                    <TextView
                        android:id="@+id/name_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/product_sans_regular"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_11sdp" />

                    <EditText
                        android:id="@+id/name_edt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_33sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/edit_text_bg_gray"
                        android:fontFamily="@font/product_sans_regular"
                        android:gravity="left|center"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine|textVisiblePassword"
                        android:paddingLeft="@dimen/_5sdp"
                        android:textColor="@color/colorWhite"
                        android:textCursorDrawable="@drawable/blue_cursor"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/error_name_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/product_sans_regular"
                        android:text=""
                        android:textColor="@color/colorRed"
                        android:textSize="@dimen/_9sdp"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/email_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/product_sans_regular"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_11sdp" />

                    <EditText
                        android:id="@+id/email_edt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_33sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/edit_text_bg_gray"
                        android:fontFamily="@font/product_sans_regular"
                        android:gravity="left|center"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine|textVisiblePassword"
                        android:paddingLeft="@dimen/_5sdp"
                        android:textColor="@color/colorWhite"
                        android:textCursorDrawable="@drawable/blue_cursor"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/error_email_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/product_sans_regular"
                        android:text=""
                        android:textColor="@color/colorRed"
                        android:textSize="@dimen/_9sdp"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/subject_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/product_sans_regular"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_11sdp" />

                    <RelativeLayout
                        android:id="@+id/subject_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_33sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/edit_text_bg_gray">

                        <TextView
                            android:id="@+id/subject_value"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@+id/arrow_icon"
                            android:fontFamily="@font/product_sans_regular"
                            android:gravity="left|center"
                            android:paddingLeft="@dimen/_5sdp"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_11sdp" />

                        <ImageView
                            android:id="@+id/arrow_icon"
                            android:layout_width="@dimen/_27sdp"
                            android:layout_height="@dimen/_27sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:padding="@dimen/_8sdp"
                            android:tint="@color/colorWhite"
                            app:srcCompat="@drawable/ic_down_arrow" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/error_subject_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/product_sans_regular"
                        android:text=""
                        android:textColor="@color/colorRed"
                        android:textSize="@dimen/_9sdp"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/message_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/product_sans_regular"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_11sdp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_5sdp">

                        <EditText
                            android:id="@+id/message"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/edit_text_bg_gray"
                            android:fontFamily="@font/product_sans_regular"
                            android:gravity="left"
                            android:imeOptions="actionDone"
                            android:inputType="textMultiLine|textVisiblePassword"
                            android:maxLines="4"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/created_by_color"
                            android:textCursorDrawable="@drawable/blue_cursor"
                            android:textSize="@dimen/_11sdp" />


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/error_message_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:fontFamily="@font/product_sans_regular"
                        android:text=""
                        android:textColor="@color/colorRed"
                        android:textSize="@dimen/_9sdp"
                        android:visibility="gone" />


                    <Button
                        android:id="@+id/invite_btn"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:background="@drawable/create_account_btn_bg_grey"
                        android:fontFamily="@font/product_sans_bold"
                        android:text="@string/submit"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_11sdp"
                        android:visibility="visible" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_margin="@dimen/_15sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:fontFamily="@font/product_sans_regular"
                            android:text="@string/you_can_also_reach_us_on"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_10sdp" />

                        <LinearLayout
                            android:layout_width="@dimen/_125sdp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/facebook_icon"
                                android:layout_width="@dimen/_28sdp"
                                android:layout_height="@dimen/_28sdp"
                                android:layout_weight="1"
                                android:padding="@dimen/_3sdp"
                                app:srcCompat="@drawable/facebook_ico" />

                            <ImageView
                                android:id="@+id/insta_icon"
                                android:layout_width="@dimen/_28sdp"
                                android:layout_height="@dimen/_28sdp"
                                android:layout_weight="1"
                                android:padding="@dimen/_3sdp"
                                app:srcCompat="@drawable/insta_ico" />

                            <ImageView
                                android:id="@+id/twitter_icon"
                                android:layout_width="@dimen/_28sdp"
                                android:layout_height="@dimen/_28sdp"
                                android:layout_weight="1"
                                android:padding="@dimen/_3sdp"
                                app:srcCompat="@drawable/twitter_ico" />

                            <ImageView
                                android:id="@+id/dovies_icon"
                                android:layout_width="@dimen/_28sdp"
                                android:layout_height="@dimen/_28sdp"
                                android:layout_weight="1"
                                android:padding="@dimen/_3sdp"
                                app:srcCompat="@drawable/dovies_web_ico_white" />

                        </LinearLayout>
                    </RelativeLayout>


                </LinearLayout>


            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:id="@+id/progress_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#10000000"
            android:layout_below="@+id/topBlurView"
            android:gravity="center"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/loader"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:indeterminateTint="@color/colorGray12"
                android:indeterminateTintMode="src_atop" />

        </RelativeLayout>


        <eightbitlab.com.blurview.BlurView
            android:id="@+id/topBlurView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineProvider="bounds"
            app:blurOverlayColor="@color/colorBlack">

            <RelativeLayout
                android:id="@+id/action_bar_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp">

                <RelativeLayout
                    android:id="@+id/header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp">

                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:padding="@dimen/_7sdp"
                        android:tint="@color/colorWhite"
                        app:srcCompat="@drawable/ic_ico_back_login" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/product_sans_bold"
                        android:gravity="center"
                        android:text="@string/contact_us"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_13sdp" />

                    <VideoView
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/line_seperator" />

                </RelativeLayout>

                <View
                    android:id="@+id/devider_view"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_below="@+id/header_layout"
                    android:background="@color/line_seperator" />

            </RelativeLayout>

        </eightbitlab.com.blurview.BlurView>


    </RelativeLayout>
</layout>