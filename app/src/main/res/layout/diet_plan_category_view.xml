<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorBlack"
    android:id="@+id/diet_container"
    android:layout_height="@dimen/_290sdp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/dietPlan_img"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="match_parent"
        android:src="@drawable/tuts_3"
        android:scaleType="fitXY"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        app:riv_corner_radius="@dimen/_16sdp"/>

    <com.makeramen.roundedimageview.RoundedImageView

        android:src="@drawable/black_wokout_collection_img"
        android:scaleType="fitXY"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:riv_corner_radius="@dimen/_16sdp"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/diet_plan_name"
        android:layout_height="wrap_content"
        android:text="MINDIII Test weight loss diet plans"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginEnd="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_50sdp"
        android:maxLines="2"
        android:lineSpacingExtra="@dimen/_5sdp"
        android:fontFamily="@font/futura_bold_regular_tracing"
        android:layout_marginBottom="@dimen/_15sdp"
        android:textAllCaps="true"
        android:textSize="@dimen/_22sdp"
        android:letterSpacing="0.04"
        android:textColor="@color/colorWhite"/>


    <!--   style="@style/ExtralargeProductBoldtyle"-->

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:background="@drawable/black_wokout_collection_img">
    </RelativeLayout>

</RelativeLayout>