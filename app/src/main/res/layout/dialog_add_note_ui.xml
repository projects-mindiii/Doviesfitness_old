<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/cus_round_all_edgeblack"
    tools:ignore="MissingDefaultResource">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_cancle_dialog"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:padding="@dimen/_2sdp"
                app:srcCompat="@drawable/ic_cancel" />

            <TextView
                android:id="@+id/txt_dialog_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:fontFamily="@font/futura_bold_regular_tracing"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="ADD NOTE"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_14sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_below="@+id/txt_dialog_heading"
                android:background="@color/line_seperator"/>

        </RelativeLayout>

    <EditText
        android:id="@+id/et_add_note"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/black_background_for_add_note"
         android:layout_width="match_parent"
        android:textSize="@dimen/_10sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingStart="@dimen/_8sdp"
        android:hint="Add note for exercise"
        android:textColorHint="@color/exo_white"
        android:gravity="start"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/roboto_regular_0"
        android:layout_height="@dimen/_180sdp"
        android:textColor="@color/exo_white"
        android:maxLength="250"
        android:imeOptions="actionDone"
        />


    <TextView
        android:id="@+id/tv_save_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:paddingStart="@dimen/_15sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:paddingTop="@dimen/_6sdp"
        android:paddingBottom= "@dimen/_6sdp"
        android:layout_gravity="center"
        android:textSize="@dimen/_14sdp"
        android:fontFamily="@font/futura_bold_regular_tracing"
        android:textColor="@color/exo_white"
        android:background="@drawable/black_background_for_add_note"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        />







</LinearLayout>
