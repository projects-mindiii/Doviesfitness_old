<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_layout"
        android:background="@color/colorBlack">
     <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:context=".ui.authentication.signup.activity.SignUpActivity">


                <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/transprent_img"
                        android:layout_margin="@dimen/_20sdp"/>


                <TextView
                        style="@style/largeProductBoldtyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reset_password"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_20sdp"/>

                <TextView
                        style="@style/SmallProductRegularStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:layout_marginBottom="@dimen/_25sdp"
                        android:text="@string/enter_your_email_to_receive_instuctions_on_how_to_reset_your_password"
                    android:fontFamily="@font/tamil_sangam"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/_2sdp"
                    android:letterSpacing="0.08"
                    android:textSize="@dimen/_11sdp"
                    />

                <EditText
                        android:id="@+id/et_email"
                        style="@style/ExtraProductRegularStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_bg_gray"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                    android:textCursorDrawable="@drawable/blue_cursor"
                        android:textColor="@color/colorWhite"
                        android:padding="@dimen/_10sdp"
                        android:textColorHint="@color/col_hint"

android:textSize="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"/>

                <TextView
                        android:id="@+id/error_email"
                        style="@style/ExtraProductRegularStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/please_enter_your_full_name"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_minus2sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:visibility="gone"
                        android:textSize="@dimen/_9sdp"
                        android:textColor="@color/colorOrange"
                        />

                <Button
                        android:id="@+id/btn_reset_pass"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:textStyle="bold"
                        android:fontFamily="@font/product_sans_bold"
                        android:textSize="@dimen/_12sdp"
                        android:letterSpacing="0.04"
                    android:padding="@dimen/_10sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                        android:background="@drawable/create_account_btn_bg_grey"
                        android:text="@string/reset"
                        android:textColor="@color/colorWhite"
                    android:layout_marginTop="@dimen/_25sdp"
                        android:layout_marginBottom="@dimen/_25sdp"
                        />


                <TextView
                        android:id="@+id/tv_return_login"
                        style="@style/ExtraProductRegularStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:text=""
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/colorWhite3"
                        android:lineSpacingExtra="@dimen/_8sdp"
                        />


            </LinearLayout>

            <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    app:srcCompat="@drawable/ic_close"
                    android:layout_gravity="end"
                    android:layout_alignParentRight="true"
                android:tint="@color/colorWhite"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"/>

        </RelativeLayout>

</RelativeLayout>
